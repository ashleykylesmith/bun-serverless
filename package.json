{
  "name": "bun-serverless",
  "version": "1.0.1",
  "description": "A lightweight Bun server that functions as an API gateway and process manager using pm2.",
  "main": "dist/index.js",
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "bun test",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "pm2": "^5.4.3",
    "winston": "^3.17.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "typescript": "^5.9.2",
    "@types/cors": "^2.8.19",
    "@types/node": "^20.19.12",
    "bun-types": "^1.2.21"
  }
}