{
  "name": "bun-serverless-gateway",
  "version": "1.0.0",
  "description": "A lightweight Bun server that functions as an API gateway and process manager",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target node",
    "clean": "rm -rf dist",
    "test": "bun test",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "pm2": "^5.3.0",
    "yaml": "^2.3.4",
    "zod": "^3.22.4",
    "winston": "^3.11.0",
    "cors": "^2.8.5",
    "@types/node": "^20.10.0"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/cors": "^2.8.17",
    "bun-types": "^1.0.0"
  }
}